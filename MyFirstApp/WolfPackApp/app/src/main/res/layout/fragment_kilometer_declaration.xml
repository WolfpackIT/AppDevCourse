        app:layout_constraintStart_toEndOf="@+id/CarDecDistance"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.92" />

    <TextView
        android:id="@+id/CarDecCompMoney"
        android:layout_width="wrap_content"
