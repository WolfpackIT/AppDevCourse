<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient"
        tools:context="nl.wolfpackit.wolfpack.modules.declarations.add.DeclarationCreationActivity">

        <android.support.design.widget.TabLayout
            android:id="@+id/declarationTabs"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/declaration_add_tabs_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tabBackground="@drawable/declaration_add_tab"
            app:tabIndicatorHeight="0dp"
            app:tabSelectedTextColor="@color/colorAccent"
            app:tabTextColor="@color/whiteFontColor">

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/declaration_add_tab"
                android:text="@string/declaration_tab_general" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/declaration_add_tab"
                android:text="@string/declaration_tab_distance" />

        </android.support.design.widget.TabLayout>

        <view
            android:id="@+id/declarationAddViewPager"
            class="nl.wolfpackit.wolfpack.CustomViewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/declarationFooter"
            app:layout_constraintTop_toBottomOf="@id/declarationTabs" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/declarationFooter"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorAccentDarker"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageButton
                android:id="@+id/declarationCancel"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/x" />

            <ImageButton
                android:id="@+id/declarationAccept"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/check" />

            <TextView
                android:id="@+id/declarationEuroSymbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/declaration_money_unit"
                android:textColor="@color/greyFontColor"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/declarationAccept"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toEndOf="@+id/declarationCancel"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/declaration_money_unit" />

            <TextView
                android:id="@+id/declarationTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/declaration_total"
                android:textColor="@color/whiteFontColor"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/declarationEuroSymbol"
                app:layout_constraintTop_toTopOf="@+id/declarationEuroSymbol" />

            <TextView
                android:id="@+id/declarationAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="TextView"
                android:textColor="@color/whiteFontColor"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/declarationEuroSymbol"
                app:layout_constraintTop_toTopOf="@+id/declarationEuroSymbol" />

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>